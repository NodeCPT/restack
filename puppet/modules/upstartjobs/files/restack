#!upstart
description "restack server"
author      "cobus"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/restack.pid
	exec sudo -u root sh -c "/usr/local/bin/node /where/restack.js >> /var/log/node.log 2>&1"
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/restack.sys.log
end script

pre-stop script
    rm /var/run/restack.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/restack.sys.log
end script